<?xml version='1.0' encoding='utf-8'?> 
<Context displayName="JSP Servlet Example" docBase="example" path="/example" reloadable="true">
  <!--                  SQLServer                  -->
  <!--       url="jdbc:sqlserver://127.0.0.1:1433;DatabaseName=JSPDB" -->
  <!-- 		 url="jdbc:sqlserver://192.168.56.117:2466;DatabaseName=JSPDB" -->
  <Resource name="jdbc/MemberDB" type="javax.sql.DataSource"
      username="sa" password="sa123456"
      driverClassName="com.microsoft.sqlserver.jdbc.SQLServerDriver"
      url="jdbc:sqlserver://127.0.0.1:1433;DatabaseName=JSPDB"
      maxActive="8"
      maxIdle="4"
      maxWait="5000"
  />   
  <!--                     MySQL                   -->
  <Resource name="JNDI的識別名稱" type="javax.sql.DataSource"
      username="你的資料庫帳號" password="對應的資料庫密碼"
      driverClassName="com.mysql.jdbc.Driver"
      url="jdbc:mysql://主機的IP:3306/資料庫的名稱"
      maxActive="8"
      maxIdle="4"
      maxWait="5000"
  />   

</Context>
